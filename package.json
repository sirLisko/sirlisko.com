{
  "name": "sirlisko.com",
  "version": "0.1.0",
  "description": "Personal Website of Luca Lischetti",
  "repository": {
    "type": "git",
    "url": "git://github.com/sirLisko/sirlisko.com.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "gulp && npm run build:js && npm run build:css",
    "build:css": "postcss src/styles/*.css -u postcss-import -u postcss-cssnext -u cssnano -u css-mqpacker -d dist/css",
    "build:js": "webpack -p",
    "clean": "del dist",
    "coverage": "istanbul cover node_modules/.bin/_mocha src/**/*.spec.js -- --require babel-register",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint:js": "eslint 'src/**/*.js'",
    "postinstall": "npm run build",
    "start": "gulp watch & npm run watch",
    "test": "npm run lint && mocha src/**/*.spec.js --compilers js:babel-core/register --reporter spec",
    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "postcss src/styles/*.css -u postcss-import -u postcss-cssnext -w -d dist/css",
    "watch:js": "webpack -w"
  },
  "author": {
    "name": "Luca Lischetti",
    "email": "luca@sirlisko.com",
    "url": "https://sirlisko.com"
  },
  "homepage": "http://sirlisko.com",
  "keywords": [
    "sirlisko",
    "personal",
    "website"
  ],
  "dependencies": {
    "apache-server-configs": "^2.14.0",
    "babel-core": "^6.9.0",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.9.0",
    "css-mqpacker": "^5.0.1",
    "cssnano": "^3.10.0",
    "gulp": "^3.9.1",
    "gulp-file-include": "^1.0.0",
    "gulp-load-plugins": "^1.2.4",
    "gulp-minify-html": "^1.0.6",
    "gulp-size": "^2.1.0",
    "gulp-util": "^3.0.7",
    "normalize.css": "^5.0.0",
    "postcss-cli": "^3.0.0-beta",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.1.0",
    "reset-css": "^2.2.0",
    "vinyl-source-stream": "^1.1.0",
    "webpack": "^2.2.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "del-cli": "^0.2.1",
    "eslint": "^3.14.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "gulp-sitemap": "^4.1.1",
    "istanbul": "^1.1.0-alpha.1",
    "jsdom": "^9.12.0",
    "jsdom-global": "^2.1.1",
    "map-stream": "0.0.6",
    "mocha": "^3.2.0",
    "proxyquire": "^1.7.11",
    "simulant": "^0.2.2",
    "sinon": "^1.17.4",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0",
    "w3cjs": "^0.3.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "engines": {
    "node": ">=6"
  },
  "eslintConfig": {
    "extends": "standard"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-empty-line-before": null,
      "rule-empty-line-before": null
    }
  }
}

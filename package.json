{
  "name": "sirlisko.com",
  "version": "0.1.0",
  "description": "Personal Website of Luca Lischetti",
  "repository": {
    "type": "git",
    "url": "git://github.com/sirLisko/sirlisko.com.git"
  },
  "scripts": {
    "build": "gulp && npm run build:css",
    "build:css": "postcss src/styles/*.css -u postcss-import -u postcss-cssnext -u cssnano -u css-mqpacker -d dist/css",
    "clean": "del dist",
    "lint:css": "stylelint 'src/styles/**/*.css'",
    "postinstall": "gulp",
    "start": "gulp watch && npm run watch:css",
    "test": "node test/index.js",
    "watch:css": "postcss src/styles/*.css -u postcss-import -u postcss-cssnext -w -d dist/css"
  },
  "author": {
    "name": "Luca Lischetti",
    "email": "luca@sirlisko.com",
    "url": "https://sirlisko.com"
  },
  "homepage": "http://sirlisko.com",
  "keywords": [
    "sirlisko",
    "personal",
    "website"
  ],
  "dependencies": {
    "apache-server-configs": "^2.14.0",
    "babel-core": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "browser-sync": "^2.12.9",
    "browserify": "^14.0.0",
    "css-mqpacker": "^5.0.1",
    "cssnano": "^3.10.0",
    "gulp": "^3.9.1",
    "gulp-file-include": "^1.0.0",
    "gulp-load-plugins": "^1.2.4",
    "gulp-minify-html": "^1.0.6",
    "gulp-size": "^2.1.0",
    "gulp-util": "^3.0.7",
    "if": "^2.0.0",
    "normalize.css": "^5.0.0",
    "postcss-cli": "^3.0.0-beta",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.1.0",
    "reset-css": "^2.2.0",
    "vinyl-source-stream": "^1.1.0"
  },
  "devDependencies": {
    "del-cli": "^0.2.1",
    "eslint": "^3.14.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "faucet": "0.0.1",
    "gulp-eslint": "^3.0.1",
    "gulp-sitemap": "^4.1.1",
    "map-stream": "0.0.6",
    "proxyquireify": "^3.2.0",
    "simulant": "^0.2.2",
    "sinon": "^1.17.4",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0",
    "tape": "^4.5.1",
    "tape-run": "^2.1.4",
    "w3cjs": "^0.3.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "engines": {
    "node": ">=5"
  },
  "eslintConfig": {
    "extends": "standard"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-empty-line-before": null,
      "rule-empty-line-before": null
    }
  }
}

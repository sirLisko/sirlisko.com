{
  "name": "sirlisko.com",
  "version": "0.1.0",
  "description": "Personal Website of Luca Lischetti",
  "repository": {
    "type": "git",
    "url": "git://github.com/sirLisko/sirlisko.com.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "run-p build:*",
    "build:css": "postcss src/styles/*.css -d dist/css -m",
    "build:js": "webpack -p",
    "build:other": "gulp",
    "clean": "del dist",
    "coverage": "istanbul cover node_modules/.bin/_mocha src/**/*.spec.js -- --require babel-register",
    "lint": "run-p -r lint:*",
    "lint:css": "stylelint src/**/*.css",
    "lint:js": "eslint src/**/*.js",
    "postinstall": "npm run build",
    "serve": "live-server dist",
    "start": "run-p -r watch serve",
    "test": "run-p -r lint unit",
    "unit": "mocha src/**/*.spec.js --compilers js:babel-core/register --reporter spec",
    "watch": "run-p watch:*",
    "watch:css": "postcss src/styles/*.css -d dist/css -w",
    "watch:js": "webpack -w",
    "watch:other": "gulp watch"
  },
  "author": {
    "name": "Luca Lischetti",
    "email": "luca@sirlisko.com",
    "url": "https://sirlisko.com"
  },
  "homepage": "http://sirlisko.com",
  "keywords": [
    "sirlisko",
    "personal",
    "website"
  ],
  "dependencies": {
    "apache-server-configs": "^2.14.0",
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.0",
    "cssnano": "^3.10.0",
    "gulp": "^3.9.1",
    "gulp-file-include": "^1.0.0",
    "gulp-load-plugins": "^1.5.0",
    "gulp-minify-html": "^1.0.6",
    "gulp-size": "^2.1.0",
    "gulp-util": "^3.0.8",
    "normalize.css": "^5.0.0",
    "npm-run-all": "^4.0.2",
    "postcss-cli": "^3.0.0",
    "postcss-cssnext": "^2.10.0",
    "postcss-import": "^9.1.0",
    "reset-css": "^2.2.0",
    "vinyl-source-stream": "^1.1.0",
    "webpack": "^2.2.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "del-cli": "^0.2.1",
    "eslint": "^3.18.0",
    "eslint-config-standard": "^7.1.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "gulp-sitemap": "^4.2.0",
    "istanbul": "^1.1.0-alpha.1",
    "jsdom": "^9.12.0",
    "jsdom-global": "^2.1.1",
    "live-server": "^1.2.0",
    "map-stream": "0.0.7",
    "mocha": "^3.2.0",
    "proxyquire": "^1.7.11",
    "simulant": "^0.2.2",
    "sinon": "^2.1.0",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0",
    "w3cjs": "^0.3.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "engines": {
    "node": ">=6"
  },
  "eslintConfig": {
    "extends": "standard"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-empty-line-before": null,
      "rule-empty-line-before": null
    }
  }
}
